{
  "name": "hakichain",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "api": "echo 'API endpoints are now handled by Vercel serverless functions'",
    "hakilens": "node hakilens-server.js",
    "vercel-build": "npm install --legacy-peer-deps && npm run build",
    "hakilens:dev": "nodemon hakilens-server.js",
    "hakilens:test": "./test-python-backend.sh",
    "hakilens:python": "VITE_PYTHON_BACKEND_URL=http://localhost:5007 npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run hakilens:dev\"",
    "dev:python": "concurrently \"npm run hakilens:python\" \"echo 'Frontend with Python backend integration ready!'\"",
    "build": "npm run build:contracts && npx vite build",
    "lint": "eslint .",
    "preview": "npx vite preview",
    "compile": "hardhat compile",
    "generate-abis": "ts-node scripts/generate-abis.ts",
    "build:contracts": "npm run compile && npm run generate-abis",
    "test": "hardhat test",
    "validate": "hardhat run scripts/validate-env.ts",
    "generate-key": "hardhat run scripts/generate-key.ts",
    "deploy": "hardhat run scripts/deploy.ts --network liskTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network liskMainnet",
    "verify": "hardhat run scripts/verify.ts --network liskTestnet",
    "verify:mainnet": "hardhat run scripts/verify.ts --network liskMainnet",
    "save-addresses": "hardhat run scripts/save-addresses.ts",
    "deploy:full": "npm run validate && npm run compile && npm run deploy && npm run verify && npm run save-addresses"
  },
