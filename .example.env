# ==========================================
# CLIENT-SIDE VARIABLES (use import.meta.env)
# All variables prefixed with VITE_ are exposed to the client
# ==========================================

# Network RPC URLs
# Note: For client-side access, prefix variables with VITE_
# Example: import.meta.env.VITE_SUPABASE_URL
VITE_LISK_TESTNET_RPC_URL="https://rpc.testnet.lisk.com"
VITE_LISK_MAINNET_RPC_URL="https://rpc.mainnet.lisk.com"

# Supabase Configuration (Client)
VITE_SUPABASE_URL="your_supabase_project_url"
VITE_SUPABASE_ANON_KEY="your_supabase_anon_key"

# Contract Addresses
VITE_LEGAL_BOUNTY_ADDRESS=""
VITE_MILESTONE_ESCROW_ADDRESS=""
VITE_DOCUMENT_REGISTRY_ADDRESS=""
VITE_REPUTATION_SYSTEM_ADDRESS=""
VITE_HAKI_TOKEN_ADDRESS=""

# ==========================================
# SERVER-SIDE VARIABLES (use process.env)
# These variables are NOT exposed to the client
# ==========================================

# Deployment Keys
PRIVATE_KEY="your_private_key_here"
ETHERSCAN_API_KEY="your_etherscan_api_key_here"

# Supabase Configuration (Server)
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Gas Settings
GAS_REPORT_ENABLED=true
GAS_REPORT_CURRENCY="USD"

# Development Settings
HARDHAT_NETWORK="hardhat"