                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"lawyer_phone\": \"+1234567890\",\n  \"client_phone\": \"+0987654321\",\n  \"message\": \"Reminder: You have a court hearing tomorrow at 10:00 AM\"\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "http://localhost:3000/api/send-sms-reminder",
                  "protocol": "http",
                  "host": [
                    "localhost"
                  ],
                  "port": "3000",
                  "path": [
                    "api",
                    "send-sms-reminder"
                  ]
                }
              },
              "status": "OK",
              "code": 200,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"success\": true,\n  \"message\": \"SMS sent successfully to both parties\",\n  \"clientResult\": {\n    \"status\": \"SUCCESS\",\n    \"messageId\": \"msg_123456\"\n  },\n  \"lawyerResult\": {\n    \"status\": \"SUCCESS\",\n    \"messageId\": \"msg_123457\"\n  }\n}"
            },
            {
              "name": "Missing Fields Error",
